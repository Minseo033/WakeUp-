<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/analysis_header_blue"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="48dp"
        android:paddingBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wake Up!"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="수면 분석"
            android:textColor="#E3F2FD"
            android:textSize="16sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이번 주 평균 수면 시간"
                        android:textColor="#757575"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp"
                        android:gravity="bottom">

                        <TextView
                            android:id="@+id/tv_avg_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0"
                            android:textColor="#212121"
                            android:textSize="48sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 시간"
                            android:textColor="#424242"
                            android:textSize="20sp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginStart="4dp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/bg_goal_badge"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:text="목표: 8시간"
                        android:textColor="@color/goal_badge_text"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="요일별 수면 시간"
                        android:textColor="#212121"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginTop="24dp"
                        android:orientation="horizontal"
                        android:gravity="bottom">

                        <LinearLayout
                            android:layout_width="24dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="end|center_vertical"
                            android:layout_marginEnd="8dp">
                            <TextView android:layout_width="wrap_content" android:layout_height="0dp" android:text="12" android:textSize="10sp" android:textColor="#9E9E9E" android:layout_weight="1" android:gravity="center_vertical|end"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="0dp" android:text="9" android:textSize="10sp" android:textColor="#9E9E9E" android:layout_weight="1" android:gravity="center_vertical|end"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="0dp" android:text="6" android:textSize="10sp" android:textColor="#9E9E9E" android:layout_weight="1" android:gravity="center_vertical|end"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="0dp" android:text="3" android:textSize="10sp" android:textColor="#9E9E9E" android:layout_weight="1" android:gravity="center_vertical|end"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="0dp" android:text="0" android:textSize="10sp" android:textColor="#9E9E9E" android:layout_weight="0"/>
                        </LinearLayout>

                        <include layout="@layout/item_bar_graph" android:id="@+id/bar_mon"
                            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
                        <include layout="@layout/item_bar_graph" android:id="@+id/bar_tue"
                            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
                        <include layout="@layout/item_bar_graph" android:id="@+id/bar_wed"
                            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
                        <include layout="@layout/item_bar_graph" android:id="@+id/bar_thu"
                            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
                        <include layout="@layout/item_bar_graph" android:id="@+id/bar_fri"
                            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
                        <include layout="@layout/item_bar_graph" android:id="@+id/bar_sat"
                            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
                        <include layout="@layout/item_bar_graph" android:id="@+id/bar_sun"
                            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="깬 횟수"
                        android:textColor="#212121"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="24dp"
                        android:orientation="horizontal"
                        android:gravity="bottom">

                        <LinearLayout
                            android:layout_width="24dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="end"
                            android:layout_marginEnd="8dp">
                            <TextView android:layout_width="wrap_content" android:layout_height="0dp" android:text="4" android:textSize="10sp" android:textColor="#9E9E9E" android:layout_weight="1" android:gravity="center_vertical|end"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="0dp" android:text="2" android:textSize="10sp" android:textColor="#9E9E9E" android:layout_weight="1" android:gravity="center_vertical|end"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="0dp" android:text="0" android:textSize="10sp" android:textColor="#9E9E9E" android:layout_weight="0"/>
                        </LinearLayout>

                        <include layout="@layout/item_bar_graph_orange" android:id="@+id/orange_bar_mon"
                            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
                        <include layout="@layout/item_bar_graph_orange" android:id="@+id/orange_bar_tue"
                            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
                        <include layout="@layout/item_bar_graph_orange" android:id="@+id/orange_bar_wed"
                            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
                        <include layout="@layout/item_bar_graph_orange" android:id="@+id/orange_bar_thu"
                            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
                        <include layout="@layout/item_bar_graph_orange" android:id="@+id/orange_bar_fri"
                            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
                        <include layout="@layout/item_bar_graph_orange" android:id="@+id/orange_bar_sat"
                            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
                        <include layout="@layout/item_bar_graph_orange" android:id="@+id/orange_bar_sun"
                            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_rounded_card"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/bg_goal_badge"
                        android:src="@drawable/ic_touch_app"
                        app:tint="@color/analysis_header_blue"
                        android:padding="6dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AI 수면 분석"
                        android:textColor="@color/analysis_header_blue"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_ai_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="데이터를 분석 중입니다..."
                    android:textColor="#546E7A"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>